{
	"variables": {
		"provisioner": "provisionerless",
		"provisioner_version": "",
    "iso_url": "http://mirror.rackspace.com/CentOS/6.6/isos/x86_64/CentOS-6.6-x86_64-minimal.iso",
    "iso_checksum": "5458f357e8a55e3a866dd856896c7e0ac88e7f9220a3dd74c58a3b0acede8e4d"
	},
  "builders": [{
    "vm_name": "centos-6.6-server-amd64",
    "type": "vmware-iso",
		"guest_os_type": "CentOS-64",
		"http_directory": "http",
		"iso_url": "{{user `iso_url`}}",
		"iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "sha256",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "1200s",
    "tools_upload_flavor": "linux",
    "headless": true,
    "boot_wait": "5s",
    "boot_command": [
         "<esc>",
         "<wait>linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-6.5-preseed.cfg<enter>" 
   ],
    "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
    "disk_size": 10140,
    "vmx_data": {
			"memsize": "512",
			"numvcpus": "1",
			"cpuid.coresPerSocket": "1"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "PROVISIONER={{user `provisioner`}}",
      "PROVISIONER_VERSION={{user `provisioner_version`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
			"script/centos/base.sh",
			"script/centos/vagrant.sh",
			"script/centos/vmtools.sh",
			"script/centos/provisioner.sh",
      "script/centos/networking.sh",
			"script/centos/cleanup.sh",
			"script/centos/zerodisk.sh"
    ]
  }],
	"post-processors": [{
		"type": "vagrant",
		"keep_input_artifact": false,
		"output": "{{.Provider}}/centos-6.6-server-amd64.box"
	}]
}
